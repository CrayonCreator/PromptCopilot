{
  "productName": "PromptCopilot",
  "version": "0.1.0",
  "identifier": "com.promptcopilot.app",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
     {
        "title": "Prompt Copilot",
        "width": 800,
        "height": 600,
        "center": true,
        "decorations": true,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "resizable": true,
        "dragDropEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ]
  }
}
